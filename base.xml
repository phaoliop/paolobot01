<context>
  <input pattern="(hola|buenas|holi|ola) *">
    <output value="Hola $UserName!" if="full($UserName)"/>

    <context if="empty($UserName)">
      <output value="Hola! cual es tu nombre?"/>

      <input pattern="$Text">
        <var name="UserName" value="$Text" scope="user"/>
        <output value="Mucho gusto $UserName!"/>
      </input>
    </context>
  </input>
  
  <input pattern="(que tal|como estas|como te encuentras) *">
  	<output value="Yo estoy bien, gracias por preguntar $UserName Y tu que tal?" if="full($UserName)"/>
  </input>

  <input>
		<pattern value="(ella)">
  		<output value="Ella no te ama"/>
  </input>
  <input>
		<pattern value="(el)">
  			<output value="El no te ama"/>
  </input>
</context>
